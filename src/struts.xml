<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>
	<constant name="struts.locale" value="zh_CN" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.multipart.maxSize" value="1000000000" />
	<constant name="struts.custom.i18n.resources" value="messages" />

	<package name="default" extends="struts-default">

		<interceptors>
			<interceptor name="sysLoginInterceptor" class="sysLoginInterceptor"></interceptor>
			<interceptor-stack name="sysLoginDefaultStack">
				<interceptor-ref name="sysLoginInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="sysLoginDefaultStack"/>

		<default-action-ref name="index" />
		<action name="index">
			<result name="success">/WEB-INF/views/login.jsp</result>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="main">
			<result name="success">/WEB-INF/views/main.jsp</result>
			<result name="login">/WEB-INF/views/login.jsp</result>
		</action>
		<action name="welcome">
			<result name="success">/WEB-INF/views/welcome.jsp</result>
		</action>
		<action name="header">
			<result name="success">/WEB-INF/views/header.jsp</result>
		</action>
		<action name="myinfo">
			<result name="success">/WEB-INF/views/user/myinfo.jsp</result>
		</action>
		<action name="changepwd">
			<result name="success">/WEB-INF/views/user/changepwd.jsp</result>
		</action>
		<action name="field">
			<result name="success">/WEB-INF/views/user/field.jsp</result>
		</action>
		<!-- -->
		<action name="sysUserInit" class="sysUserAction" method="sysUserInit">
			<result name="success">/WEB-INF/views/user/user.jsp</result>
		</action>

		<action name="role">
			<result name="success">/WEB-INF/views/user/role.jsp</result>
		</action>

		<action name="findpwd">
			<result name="success">/WEB-INF/views/user/findpwd.jsp</result>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		
		<action name="shopTypeInit">
			<result>/WEB-INF/views/sys/shoptype.jsp</result>
		</action>
		
		<action name="myAdviceInit">
			<result>/WEB-INF/views/sys/advice.jsp</result>
		</action>
		
		<action name="myPublishInit">
			<result>/WEB-INF/views/sys/publish.jsp</result>
		</action>
		
		<action name="areaInit" class="regionAction" method="area">
			<result name="success">/WEB-INF/views/sys/area.jsp</result>
		</action>
		<action name="cmnUserInit" class="userAction" method="initUserCities">
			<result name="success">/WEB-INF/views/sys/cmnuser.jsp</result>
		</action>

		<action name="userAction" class="userAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>

		<action name="regionAction" class="regionAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>

		<action name="shopAction" class="shopAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<!-- -->
		<action name="sysLoginAction" class="sysLoginAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>

		<action name="sysUserAction" class="sysUserAction">
			<result name="login">index.jsp</result>
		</action>

		<action name="sysFieldAction" class="sysFieldAction">
			<result name="login">index.jsp</result>
		</action>

		<action name="sysModuleAction" class="sysModuleAction">
			<result name="login">index.jsp</result>
		</action>

		<action name="sysModuleInitAction" class="sysModuleAction"	method="module">
			<result name="success">/WEB-INF/views/user/module.jsp</result>
		</action>

		<action name="sysRoleAction" class="sysRoleAction">
			<result name="login">index.jsp</result>
		</action>

		<action name="checkimage" class="captchaImageCreateAction" method="createImage">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		
		<action name="shopTypeAction" class="shopTypeAction">
			<result name="login">index.jsp</result>
		</action>
		
		<action name="adviceAction" class="adviceAction">
		<result name="login">index.jsp</result>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="publishAction" class="publishAction">
		<result name="login">index.jsp</result>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		
		<action name="provider" class="merchantAction" method="initMerchant">
			<result name="success">/WEB-INF/views/sys/merchant.jsp</result>
		</action>
		<action name="merchantAction" class="merchantAction">
			<result name="login">index.jsp</result>
		</action>
		
		<action name="myshopinfo" class="merchantShopAction" method="initShop">
			<result name="success">/WEB-INF/views/sys/shop.jsp</result>
		</action>
		
		<action name="merchantShopAction" class="merchantShopAction">
			<interceptor-ref name="fileUpload">
			     <!--拦截器strut2自带的, 指定上传文件的格式,如果不符合规定，将会自动拦截下来 -->
			     <param name="allowedTypes">image/bmp,image/png,image/gif,image/jpeg,image/jpg</param>
			     <param name="maximumSize">5120000</param>
		     </interceptor-ref>
            <result name="login">index.jsp</result>
            <interceptor-ref name="sysLoginDefaultStack"/>
		</action>
		
		<action name="sysShopInit" class="sysShopAction" method="initShop">
			<result name="success">/WEB-INF/views/sys/merchantshops.jsp</result>
		</action>
		
		<action name="sysShopAction" class="sysShopAction">
			<interceptor-ref name="fileUpload">
			     <!--拦截器strut2自带的, 指定上传文件的格式,如果不符合规定，将会自动拦截下来 -->
			     <param name="allowedTypes">image/bmp,image/png,image/gif,image/jpeg,image/jpg</param>
			     <param name="maximumSize">102400</param>
		     </interceptor-ref>
            <result name="login">index.jsp</result>
            <interceptor-ref name="sysLoginDefaultStack"/>
		</action>
		
		<action name="myvoucherinfo" class="voucherAction" method="initVoucher">
			<result name="success">/WEB-INF/views/sys/voucher.jsp</result>
		</action>
		
		<action name="mydistance">
			<result>/WEB-INF/views/sys/distance.jsp</result>
		</action>
		
		<action name="distanceAction" class="distanceAction">
			<result name="login">index.jsp</result>
		</action>
		
		<action name="purchaseAction" class="purchaseAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="walletAction" class="walletAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		
		<action name="voucherAction" class="voucherAction">
			 <interceptor-ref name="fileUpload">
			     <!--拦截器strut2自带的, 指定上传文件的格式,如果不符合规定，将会自动拦截下来 -->
			     <param name="allowedTypes">image/bmp,image/png,image/gif,image/jpeg,image/jpg</param>
			     <param name="maximumSize">204800</param>
		     </interceptor-ref>
            <result name="login">index.jsp</result>
            <interceptor-ref name="sysLoginDefaultStack"/>
		</action>
	</package>

</struts>
